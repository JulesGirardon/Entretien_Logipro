{# templates/book/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Create New Book{% endblock %}

{% block body %}
    <h1>Create New Book</h1>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.author) }}
    {{ form_row(form.genre) }}
    {{ form_row(form.isAvailable) }}
    <button class="btn">Save</button>
    {{ form_end(form) }}
{% endblock %}
