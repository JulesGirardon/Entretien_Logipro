{# templates/book/list.html.twig #}

<h1>Liste des livres</h1>
<table>
    <thead>
    <tr>
        <th>Titre</th>
        <th>Auteur</th>
        <th>Genre</th>
        <th>Disponibilité</th>
    </tr>
    </thead>
    <tbody>
    {% for book in books %}
        <tr>
            <td>{{ book.title }}</td>
            <td>{{ book.author }}</td>
            <td>{{ book.genre }}</td>
            <td>{{ book.isAvailable ? 'Disponible' : 'Emprunté' }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
